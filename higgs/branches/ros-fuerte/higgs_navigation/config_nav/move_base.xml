<launch>

  <!-- parameter for this launch file -->
  <arg name="KIN_ALONE" />
  <arg name="ODOM_EKF" />
  <arg name="KINECT" value="$(arg KIN_ALONE)"/>
  <arg name="EKF" value="$(arg ODOM_EKF)"/>


  <node pkg="move_base" type="move_base" respawn="false" name="move_base_node" >
    <remap from="odom" to="/pioneer/odom" />
    <remap from="cmd_vel" to="/pioneer/cmd_vel" />
  
    <rosparam file="$(find higgs_navigation)/config_nav/move_base_params.yaml" command="load" />

    <rosparam file="$(find higgs_navigation)/config_nav/costmap_robot_model.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find higgs_navigation)/config_nav/costmap_robot_model.yaml" command="load" ns="local_costmap" />

    <rosparam file="$(find higgs_navigation)/config_nav/costmap_common.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find higgs_navigation)/config_nav/costmap_common.yaml" command="load" ns="local_costmap" />
  
    <rosparam if="$(arg KINECT)" file="$(find higgs_navigation)/config_nav/costmap_sensors_kinect.yaml" command="load" ns="global_costmap" />
    <rosparam if="$(arg KINECT)" file="$(find higgs_navigation)/config_nav/costmap_sensors_kinect.yaml" command="load" ns="local_costmap" />

    <rosparam unless="$(arg KINECT)" file="$(find higgs_navigation)/config_nav/costmap_sensors_laser.yaml" command="load" ns="global_costmap" />
    <rosparam unless="$(arg KINECT)" file="$(find higgs_navigation)/config_nav/costmap_sensors_laser.yaml" command="load" ns="local_costmap" />
    
    <rosparam file="$(find higgs_navigation)/config_nav/global_costmap_params.yaml" command="load" />
    
    <!-- global frame for local_costmap depends on use of ekf -->
    <rosparam file="$(find higgs_navigation)/config_nav/local_costmap_params.yaml" command="load" />
    <param if="$(arg EKF)" name="local_costmap/global_frame" value="odom_combined" />
    <param unless="$(arg EKF)" name="local_costmap/global_frame" value="odom" />
        
    <rosparam file="$(find higgs_navigation)/config_nav/base_local_planner_params.yaml" command="load" />
    <rosparam if="$(arg KINECT)" file="$(find higgs_navigation)/config_nav/base_local_planner_kinect.yaml" command="load" />
    <rosparam unless="$(arg KINECT)" file="$(find higgs_navigation)/config_nav/base_local_planner_laser.yaml" command="load" />
    

  </node>
</launch>
